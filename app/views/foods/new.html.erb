<%= render "shared/header" %>
<%= form_with local: true do |f| %>
  <div class="foods-menu-contents">
    <div class="foods-menu-main">
      <h2 class="foods-menu-title">レシピ投稿</h2>
      <div class="weight-bold-text new-foods">
        レシピタイトル
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :title, class:"foods-text", id:"food-name", placeholder:"料理名（必須 40文字まで)", maxlength:"40" %>
      
      <%#= render 'shared/error_messages', model: f.object %>
      
      <div class="recipe-post-low">

        <%# 料理画像 %>
        <div class="img-upload">
          <div class="weight-bold-text">
            商品画像
            <span class="indispensable">必須</span>
          </div>
          <div class="click-upload">
            <p>
              クリックしてファイルをアップロード
            </p>
            <%= f.file_field :image, id:"foods-image" %>
          </div>
        </div>
        <%# /料理画像 %>

        <%# 調理時間・費用目安 %>
        <div class="foods-detail">
          <div class="form">
            <div class="weight-bold-text">
              調理時間
              <span class="indispensable">必須</span>
            </div>
            <%= f.collection_select(:cook_time_id, CookTime.all, :id, :name, { include_blank: "選択してください" }, {class:"select-box", id:"cook-time-category"}) %>
            <div class="weight-bold-text">
              費用目安
              <span class="indispensable">必須</span>
            </div>
            <%= f.collection_select(:cost_id, Cost.all, :id, :name, { include_blank: "選択してください" }, {class:"select-box", id:"cost-category"}) %>
          </div>
        </div>
        <%# /調理時間・費用目安 %>
      </div>

      <%# レシピコメント %>
      <div class="new-foods">
        <div class="foods-explain">
          <div class="weight-bold-text">
            レシピコメント
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_area :hoge, class:"foods-text", id:"food-comment", placeholder:"例） おもてなしにぴったりです！意外と手間がかかりません！" ,rows:"4" ,maxlength:"100" %>
        </div>
      </div>
      <%# /レシピコメント %>

      <%# 食材 %>
        <div class="weight-bold-text">
          <span>食材</span>
          <span class="indispensable">必須</span>
        </div>
        <div class="ingredient-detail">
          <div class="form">          
            <%= f.text_area :name, class:"ingredient-text", id:"ingredient-name", placeholder:"例）にんじん", maxlength:"20" %>
          </div>  
          <div class="form">
            <%= f.collection_select(:food_group_id, FoodGroup.all, :id, :name, { include_blank: "選択してください" }, {class:"second-select-box", id:"food-group-category"}) %>
          </div>
          <div class="except-btn-ingredient">
            <input type="button" value="削除" class="except-btn" >
          </div>
        </div>
        <div class="add-btn-content">
          <input type="button" value="＋ 食材を追加する" class="add-btn" >
        </div>
      <%# /食材 %>

      <%# 作り方 %>
      <div class="foods-explain">
        <div class="weight-bold-text">
          作り方
          <span class="indispensable">必須</span>
        </div>
        <div class="recipe">
          <div class="form">
            <%= f.text_area :hoge, class:"recipe-text", id:"food-recipe", placeholder:"例） 玉ねぎは１cmの厚さの輪切りにし、小麦粉大さじ１をまぶす。" ,rows:"4" ,maxlength:"100" %>
          </div> 
          <div class="except-btn-ingredient">
            <input type="button" value="削除" class="except-btn" >
          </div>
        </div>  
      </div>
      <div class="add-btn-content">
        <input type="button" value="＋ 作り方を追加する" class="add-btn" >
      </div>
      <%# /作り方 %>

      <%# 注意書き %>
      <div class="caution">
        <%= check_box_tag :caution %>
        <%= label_tag :caution do %>
          <a href= "#", class="guideline">ガイドライン</a>をよく読んで理解した
        <% end %>
      </div>
      <%# /注意書き %>

      <%# 下部ボタン %>
      <div class="post-btn-contents">
        <%= f.submit "投稿する" ,class:"post-btn" %>
        <%= link_to 'もどる', root_path, class:"back-btn" %>
      </div>
      <%# /下部ボタン %>
    </div>
  </div>
<% end %>
<%= render "shared/footer" %>