<%= render "shared/header" %>

<%# 商品の概要 %>
<div class="item-show">
  <div class="item-box">
    <h2 class="name">
      <%= @food.title %>
    </h2>
    <div class="food-main">
      <div class="food-img-content">
        <%= image_tag @food.image ,class:"food-box-img" %>
      </div>

      <%# チャート %>
      <div class="chart">
        <canvas id="myChart" width="500"></canvas>
        <script>
        var ctx = document.getElementById("myChart");
        var myChart = new Chart(ctx, {
          type: 'radar',
          data: {
            labels: ["1群", "２群", "３群", "４群", "5群", "6群"],
            datasets: 
            [
                {
                label: '６つの基礎食品群',
                backgroundColor: 'rgba(102,255,129,0.2)',
                borderColor: 'rgba(122,255,129,0.2)',
                data: [2, 2, 3, 7, 5, 7]
                },
            ]
          },
          options: {
              scale: {
                  ticks: {
                      suggestedMin: 0,
                      suggestedMax: 7
                  }
              }
          }
        });
        </script>
      </div>  
      <%# /チャート %>
    </div>

    <div class="item-price-box">
      <span class="item-price">
        🕐<%= @food.cook_time.name%>
      </span>
      <span class="item-postage">
        💴<%= @food.cost.name %>
      </span>
    </div>

    <%# ログインしているユーザーと出品しているユーザーが、同一人物の場合と同一人物ではない場合で、処理を分けましょう %>

    <%= link_to "編集", "#", method: :get, class: "food-edit" %>
    <%= link_to "削除", "#", method: :delete, class:"food-destroy" %>

    <%# //ログインしているユーザーと出品しているユーザーが、同一人物の場合と同一人物ではない場合で、処理を分けましょう %>

    <div class="item-explain-box">
      <span><%= "材料" %></span>
    </div>
    <table class="detail-table">
      <tbody>
        <% @ingredients.each do |ingredient| %>
          <tr>
            <th class="detail-item"><%= ingredient.name %></th>
            <td class="detail-value"><%= "出品者名" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="option">
      <div class="favorite-btn">
        <%= image_tag "star.png" ,class:"favorite-star-icon" ,width:"20",height:"20"%>
        <span>お気に入り 0</span>
      </div>
      <div class="report-btn">
        <%= image_tag "flag.png" ,class:"report-flag-icon" ,width:"20",height:"20"%>
        <span>不適切な料理の通報</span>
      </div>
    </div>
  </div>
</div>  
  <%# /商品の概要 %>
<%= render "shared/footer" %>