<%= render "shared/header" %>

<%# 商品の概要 %>
<div class="item-show">
  <div class="item-box">
    <h2 class="name">
      <%= @food.title %>
    </h2>
    <div class="food-main">
      <div class="food-img-content">
        <%= image_tag @food.image ,class:"food-box-img" %>
      </div>

      <%# チャート %>
      <div class="chart">
        <canvas id="myChart" width="700"></canvas>
        <script>
        var ctx = document.getElementById("myChart");
        var myChart = new Chart(ctx, {
          type: 'radar',
          data: {
            labels: ["1群", "２群", "３群", "４群", "5群", "6群"],
            datasets: 
            [
                {
                label: '６つの基礎食品群',
                backgroundColor: 'rgba(255,165,0,0.5)',
                borderColor: 'rgba(255,165,0,0.2)',
                data: [<%= @food_group[1] %>, <%= @food_group[2] %>, <%= @food_group[3] %>, <%= @food_group[4] %>, <%= @food_group[5]%>, <%= @food_group[6] %>]
                },
            ]
          },
          options: {
              scale: {
                  ticks: {
                      suggestedMin: 0,
                      suggestedMax: 7
                  }
              }
          }
        });
        </script>
      </div>  
      <%# /チャート %>
    </div>

    <div class="detail-top">
      <div class="detail-top-first">
        <span class="cook_time">
          🕐<%= @food.cook_time.name%>
        </span>
        <span class="cost">
          💴<%= @food.cost.name %>
        </span>
      </div>
      <div class="favorite-btn">
        <%= image_tag "star.png" ,class:"favorite-star-icon" ,width:"20",height:"20"%>
        <span>お気に入りに追加</span>
      </div>
    </div>
     <div class="detail-top-second">  
        <span>
          <%= @food.comment %>
        </span>
      </div>  

    <%# 材料 %>
    <div class="ingredient-explain-box">
      材料（<span><%= @food.serving %></span>人分）
    </div>
    <table class="detail-table">
      <tbody>
        <% @ingredients.each do |ingredient| %>
          <tr>
            <td class="ingredient-name"><%= ingredient.name %></td>
            <td class="ingredient-amount"><%= ingredient.amount %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%# /材料 %>

    <%# 作り方 %>
    <div class="how-to-cook">
      作り方
    </div>
      <% @recipes.each_with_index do |recipe, index| %>
        <div class="recipe-index"><%= index + 1 %></div>
        <table class="detail-table">
          <tbody>
            <tr>
              <td class="recipe-text"><%= recipe.text %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    <%# /作り方 %>

    <%# ログインしているユーザーと出品しているユーザーが、同一人物の場合と同一人物ではない場合で、処理を分けましょう %>
<div class="edit-destroy">
    <%= link_to "編集", "#", method: :get, class: "food-edit" %>
    <%= link_to "削除", "#", method: :delete, class:"food-destroy" %>
</div>
    <%# //ログインしているユーザーと出品しているユーザーが、同一人物の場合と同一人物ではない場合で、処理を分けましょう %>

  </div>
</div>  
  <%# /商品の概要 %>


<%= render "shared/footer" %>