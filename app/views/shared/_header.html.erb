<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to "Nutrik", "/", class:"furima-icon" %>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>  
  <div class='lists-right'>
    <% if user_signed_in? %>
      <div class='my-page'>
        <%= link_to "#" do %>
          <%= image_tag("mypage.png") %>
          <div>マイページ</div>
        <% end %>
      </div>
      <div class='logout'>
        <%= link_to "#", method: :delete  do %>
          <%= image_tag("logout.png") %>
          <div>ログアウト</div>
        <% end %>  
      </div>
    <% else %>  
      <div class='login'>
        <%= link_to new_user_session_path do %>
          <%= image_tag("login.png") %>
          <div>ログイン</div>
        <% end %>
      </div>
      <div class='sign_up'>
        <%= link_to new_user_registration_path do %>
          <%= image_tag("sign_up.png") %>
          <div>新規登録</div>
        <% end %>
      </div>
    <% end %>  
  </div>  
</header>